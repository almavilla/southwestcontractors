@if (ShowDialog)
{
    <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="titleLabel">Contractor Quick Add</h5>
                    <button type="button" class="close" @onclick="@Close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <EditForm Model="@Contractor" OnValidSubmit="@HandleValidSubmit">

                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="form-group">
                            <label for="Name">Name: </label>
                            <InputText id="Name" class="form-control" @bind-Value="@Contractor.Name" placeholder="Enter Name"></InputText>
                            <ValidationMessage For="@(() => Contractor.Name)" />
                        </div>
                        <div class="form-group">
                            <label for="Name">LastName: </label>
                            <InputText id="LastName" class="form-control" @bind-Value="@Contractor.LastName" placeholder="Enter Last Name"></InputText>
                            <ValidationMessage For="@(() => Contractor.LastName)" />
                        </div>
                        <div class="form-group">
                            <label for="Name">Address: </label>
                            <InputText id="Address" class="form-control" @bind-Value="@Contractor.Address" placeholder="Enter Address"></InputText>
                            <ValidationMessage For="@(() => Contractor.Address)" />
                        </div>
                        <div class="form-group">
                            <label for="Name">City: </label>
                            <InputText id="City" class="form-control" @bind-Value="@Contractor.City" placeholder="Enter City"></InputText>
                            <ValidationMessage For="@(() => Contractor.City)" />
                        </div>
                        <div class="form-group">
                            <label for="Name">State: </label>
                            <InputText id="State" class="form-control" @bind-Value="@Contractor.State" placeholder="Enter State"></InputText>
                            <ValidationMessage For="@(() => Contractor.State)" />
                        </div>
                        <div class="form-group">
                            <label for="Name">PhoneNumber: </label>
                            <InputText id="PhoneNumber" class="form-control" @bind-Value="@Contractor.PhoneNumber" placeholder="Enter Phone Number"></InputText>
                            <ValidationMessage For="@(() => Contractor.PhoneNumber)" />
                        </div>


                        <button type="submit" class="btn btn-primary">Save Contractor</button>
                        <a class="btn btn-outline-primary" @onclick="@Close">Close</a>
                    </EditForm>

                </div>
            </div>
        </div>
    </div>
}
